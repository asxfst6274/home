<!DOCTYPE html>
<html lang="en" class="light" id="important">
  <!-- BEGIN: Head -->

  <head>
    <%- include("includes/head-assets.ejs") %>
  </head>
  <!-- END: Head -->

  <body class="py-5">
    <!-- Start Preloader Area -->
    <%- include("../share/preloader.ejs") %>
    <!-- End Preloader Area -->

    <%- include("includes/navigation.ejs") %>
    <!-- BEGIN: Content -->
    <div class="content">
      <%- include("includes/notice.ejs") %>
      <div class="grid grid-cols-12 gap-6">
        <div
          class="lg:col-start-3 col-span-12 lg:col-span-8 flex lg:block flex-col mt-6"
        >
          <div class="intro-y overflow-auto lg:overflow-visible mt-2">
            <form action="/deposit-method/<%= editing ? 'edit' : 'create' %>" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <% if(editing){ %> 
              <input id="methodId" type="hidden" name="_id" value="<%= depositMethod._id %>">
              <% } %>
              <!-- BEGIN: Personal Information -->
              <div class="intro-y box lg:mt-5">
                <div
                  class="flex items-center p-5 border-b border-red2 dark:border-darkmode-400"
                >
                  <h2 class="font-medium text-base mr-auto">
                    <%= editing ? "Edit Coin" : "Create New Deposit Coin" %>
                  </h2>
                </div>
                <div class="p-5 grid grid-cols-1 md:grid-cols-2 gap-3">
                  <div id="coin">
                    <label for="update-profile-form-11" class="form-label"
                      >Coin</label
                    >
                    <input
                      id="update-profile-form-11"
                      type="text"
                      class="form-control"
                      placeholder="Coin"
                      name="coin"
                      value="<%= depositMethod.coin %>"
                    />
                    <div class="message"></div>
                  </div>
                  <div id="network">
                    <label for="update-profile-form-11" class="form-label"
                      >Network</label
                    >
                    <input
                      id="update-profile-form-11"
                      type="text"
                      class="form-control"
                      placeholder="Network"
                      name="network"
                      value="<%= depositMethod.network %>"
                    />
                    <div class="message"></div>
                  </div>
                  <div id="wallet">
                    <label for="update-profile-form-11" class="form-label"
                      >Wallet Address</label
                    >
                    <input
                      id="update-profile-form-11"
                      type="text"
                      class="form-control"
                      placeholder="Wallet Address"
                      name="wallet"
                      value="<%= depositMethod.wallet %>"
                    />
                    <div class="message"></div>
                  </div>
                  <div>
                    <label for="update-profile-form-8" class="form-label" name="status"
                      >Status</label
                    >
                    <select id="update-profile-form-8" class="form-select " name="status">
                      <option value="enabled" <%= depositMethod.status === 'enabled' ?'selected' : '' %>>Active</option>
                      <option value="disabled" <%= depositMethod.status === 'disabled' ?'selected' : '' %>>Inactive</option>
                    </select>
                  </div>
                </div> 
              </div>
              <div class="flex justify-center">
                <button type="button" class="btn btn-primary mt-3" id="submitBtn">
                  <%= editing ? "Save" : "Create" %>
                </button>
              </div>
            </form>
            <!-- END: Personal Information -->
          </div>
        </div>
      </div>
    </div>
    <!-- END: Content -->
    <%- include("includes/js-assets.ejs") %>
    <script
    src="/src/controllers/admin/addDepositCoin.js"
    type="module"
  ></script>
  <script>
      $(".menu.menu_deposit_coin").addClass("menu--active");
    $(".top-menu.menu_extra").addClass("top-menu--active");
  </script>
  </body>
</html>
