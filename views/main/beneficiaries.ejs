<!DOCTYPE html>
<html lang="zxx">
  <%- include("includes/head.ejs") %>

  <body>
    <%- include("includes/navigation.ejs") %>

    <!-- Body-content -->
    <div class="body-content">
      <div class="mobile-screen">
        <%- include("../share/notice.ejs") %>
        <div
          class="section-header d-block tw-border-b-4 tw-border-red1 mb-3 pb-2"
        >
          <h2 class="text-center">Beneficiaries</h2>
        </div>

        <div class="page-header-action mb-3 d-flex justify-content-center">
          <a
            href="/add-beneficiary"
            class="p-2 tw-border-2 tw-border-redLight d-inline-flex rounded"
          >
            <i class="flaticon-plus"></i>
            <p>Add A New Beneficiary</p>
          </a>
        </div>

        <!-- Transaction-section -->
        <div class="transaction-section pb-15">
          <!-- prettier-ignore -->
          <% beneficiaries.forEach(beneficiary =>{%>
            <%- include("components/beneficiaryCard.ejs",{beneficiary}) %>
          <% }) %>
        </div>
        <!-- Transaction-section -->
      </div>
      <% if(!beneficiaries.length){ %>
      <h2 class="text-center mt-5 tw-text-slate-500">
        You haven't added any beneficiary yet!
      </h2>
      <% } %>
    </div>
    <!-- Body-content -->

    <!--  -->
    <%- include("components/beneficiaryDeleteModal.ejs") %>
    <!--  -->
    <%- include("includes/footer.ejs") %>
    <script src="/src/controllers/main/beneficiaries.js" type="module"></script>
  </body>
</html>
