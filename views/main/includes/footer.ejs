<!-- Menu-modal -->
<div
  class="modal fade"
  id="sidebarDrawer"
  tabindex="-1"
  aria-labelledby="sidebarDrawer"
  aria-hidden="true"
>
  <div class="modal-dialog side-modal-dialog">
    <div class="modal-content">
      <div class="modal-header sidebar-modal-header">
        <div class="sidebar-profile-info">
          <div
            class="sidebar-profile-thumb tw-outline tw-outline-offset-2 tw-outline-2 tw-outline-red1"
          >
            <img
              src="<%= dataFile.imageHost %>/user/icon/<%= cUser.profile ? cUser.profile : 'default.png' %>"
              alt="profile"
            />
          </div>
          <div class="sidebar-profile-text">
            <h3 class="text-capitalize"><%= cUser.name %></h3>
            <p class="tw-text-md">A/C: <%= cUser.accountNumber %></p>
            <span
              class="badge bg-<%= cUser.status === 'pending' ? 'warning' : 'success' %>"
              ><%= cUser.status === 'pending' ? 'Not Verified' : 'Verified'
              %></span
            >
          </div>
        </div>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="sidebar-profile-wallet gradient">
        <div class="add-card-info">
          <p>Account balance</p>
          <h3 class="myMainBalance">
            <%= cUser.hideBalance ? "$ *** *** **" :
            helpers.dollar(cUser.balance) %>
          </h3>
        </div>
      </div>
      <div class="modal-body">
        <div class="sidebar-nav">
          <div class="sidebar-nav-item">
            <!-- <h3>Oban Menu</h3> -->
            <ul class="sidebar-nav-list">
              <li>
                <a href="/" class="nav-home"
                  ><i class="flaticon-house"></i> Home</a
                >
              </li>
              <li>
                <a href="/transfer" class="nav-transfer"
                  ><i class="flaticon-right-arrow"></i> Wire Transfer</a
                >
              </li>
              <li>
                <a href="/transactions" class="nav-transaction"
                  ><i class="flaticon-invoice"></i>Transaction History</a
                >
              </li>
              <li>
                <a href="/deposit" class="nav-deposit"
                  ><i class="flaticon-income"></i> Fixed Deposit</a
                >
              </li>
              <li>
                <a href="/loans" class="nav-loans"
                  ><i class="flaticon-expenses"></i>Loan Applications</a
                >
              </li>
              <li>
                <a href="/savings" class="nav-save"
                  ><i class="flaticon-savings"></i>My savings</a
                >
              </li>
              <li>
                <a href="/beneficiaries" class="nav-beneficiary"
                  ><i class="flaticon-invoice"></i>Beneficiaries</a
                >
              </li>
              <li>
                <a href="/cards" class="nav-card"
                  ><i class="flaticon-credit-card"></i> My Cards</a
                >
              </li>
              <li>
                <a href="/settings" class="nav-settings"
                  ><i class="flaticon-settings"></i> Settings</a
                >
              </li>
              <li>
                <a href="/logout"><i class="flaticon-logout"></i> Logout</a>
              </li>
              <% if(cUser.role === "admin"){ %>
              <li class="mt-3">
                <a href="/go-admin"><i class="flaticon-logout"></i> Go Admin</a>
              </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Menu-modal -->

