<% if(success){ %>
<div
  class="alert alert-success alert-dismissible fade show d-flex justify-content-between"
  role="alert"
>
  <strong><%= message %></strong>
  <span class="text-success fw-bold tw-cursor-pointer" data-bs-dismiss="alert"
    >X</span
  >
</div>
<% } %> <% if(error){ %>
<div
  class="alert alert-danger alert-dismissible fade show d-flex justify-content-between"
  role="alert"
>
  <strong><%= message %></strong>
  <span class="text-danger fw-bold tw-cursor-pointer" data-bs-dismiss="alert"
    >X</span
  >
</div>
<% } %>
